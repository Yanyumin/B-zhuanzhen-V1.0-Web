/* pages/applyOrder/applyOrder.wxss */
.applyContainer {
  padding: 0 20rpx;
  background: #f2f2f2;
  padding-top: 25rpx;
  box-sizing: border-box;
}
.infoContainer:first-child {
  margin: 0;
}
.infoContainer {
  border-radius: 10rpx;
  background: #fff;
  margin-top: 25rpx;
  padding: 0 40rpx 40rpx;
}
.infoContainer .title {
  line-height: 80rpx;
  color: #949494;
  border-bottom: 1px solid #e4e4e4;
  font-size: 30rpx;
}
.infoContainer .content .contentItem {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding-top: 30rpx;
  justify-content: space-between;
  color: #838383;
}
.infoContainer .content .contentItem .itemName {
  flex: 2;
}
.infoContainer .content .contentItem .itemInput {
  flex: 4;
  height: 60rpx;
  border-radius: 30rpx;
  border: 1px solid #e4e4e4;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.infoContainer .content .contentItem .itemInput input {
  width: 100%;
  height: 100%;
}
.textBox {
  height: 110rpx;
  border-radius: 55rpx;
  border: 1px solid #e4e4e4;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.textBox textarea {
  width: 90%;
  height: 66rpx;
}
.uploadItem {
  display: flex;
  padding: 20rpx 0;
  flex-wrap: wrap;
}
.uploadItem .uploadBox {
  width: 60px;
  height: 60px;
  border: 1px dashed #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #bfbfbf;
  font-size: 34rpx;
  margin-right: 30rpx;
  position: relative;
  margin-top: 20rpx;
}
.deleteIcon {
  position: absolute;
  top: -8px;
  right: -5px;
  height: 30rpx;
  width: 30rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.5);
  text-align: center;
  line-height: 30rpx;
  color: #fff;
}
.uploadItem .uploadBox image {
  width: 100%;
  height: 100%;
}
.uploadItem .uploadContent {
  display: flex;
  flex: 4;
  flex-direction: column;
  justify-content: space-between;
  padding-top: 15rpx;
}
.uploadItem .uploadContent .uploadTitle {
  font-size: 28rpx;
  color: #bfbfbf;
}
.uploadItem .uploadContent .uploadTip {
  font-size: 26rpx;
  color: #d2d2d2;
  padding-top: 10rpx;
}

.weui-check__label {
  display: flex;
  align-items: center;
}
.weui-check__label:first-child {
  margin-right: 40rpx;
}
radio-group {
  display: flex;
  align-items: center;
  width: 100%;
}
radio-group .weui-check__label:first-child {
  margin-right: 110rpx;
}
.weui-cell__hd {
  margin-right: 30rpx;
}
.weui-cell__bd {
  font-size: 30rpx;
  color: #838383;
}
.pickerBox {
  position: relative;
  padding-right: 50rpx;
}
.pickerBox input {
 padding-right: 45rpx;
 box-sizing: border-box;
}
.pickerBox .stringle {
  border: 4px solid;
  border-color: #c9c9c9 transparent transparent;
  position: absolute;
  top: 48%;
  right: 30rpx;
  transform: translate(-50% 0);
}
picker {
  height: 100%;
  width: 100%;
  line-height: 100%;
  text-align: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;

}
.picker {
  width: 52.3vw !important;
  line-height: 100%;
  box-sizing: border-box;
  flex-basis: 100%;
  height: 62rpx;
}
.agreement {
  padding:  35rpx 0;
}
.serviceBox {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.serviceBox .weui-cell__hd {
  margin-right: 0;
}
.submitBox {
  display: flex;
  justify-content: center;
  padding-bottom: 40rpx;
}
.submitBox > view {
  height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  background: #d7d7d7;
  font-size: 28rpx;
  color: #fff;
  width: 80%;
}
.submitBox > view.active {
  background: #b76285;
}
.afterInfo {
  background: #fff;
  border-radius: 10rpx;
  padding: 40rpx;
  text-align: center;
}
.afterInfo .title {
  font-size: 30rpx;
  font-weight: 600;
  line-height: 80rpx;
  color: #4a4a4a;
}
.afterInfo .tips {
  font-size: 26rpx;
  line-height: 40rpx;
  color: #c8c8c8;
  padding: 0 20rpx;
}
.viewBtns {
  display: flex;
  padding: 0 40rpx;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}
.viewBtns > view {
  flex-basis: 46%;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
}
.viewBtns .viewDetail {
  background: #39df7f;
  color: #fff;
}
.viewBtns .goIndex {
  background: #fff;
  color: #797979;
  border: 1px solid #e9e9e9;
}